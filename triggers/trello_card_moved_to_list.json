{
  "name": {
    "pt_BR": "card movido para lista",
    "en": "card moved to list"
  },
  "trigger_key": "card_moved_to_list",
  "description": {
    "pt_br": "Quando um card de um determinado board​ é movido para uma determinada lista​.",
    "en": "When a card from a particular board is moved to a particular list."
  },
  "trigger_fields": {
    "type": "local",
    "fields": [
      {
        "key": "member",
        "name": "member",
        "description": {"pt_BR": "membro do board", "en": "board's member"},
        "field_type": "string",
        "metadata": { "field": "action.data",
          "meta_key": "member",
          "key": "name",
          "value": "name"
        }
      },
      {
        "key": "list",
        "name": "list",
        "description": {"pt_BR": "lista do board", "en": "board's list"},
        "field_type": "string",
        "metadata": { "field": "action.data",
          "meta_key": "list",
          "key": "name",
          "value": "name"
        }
      },
      {
        "key": "card",
        "name": "card",
        "description": {"pt_BR": "card do board", "en": "board's card"},
        "field_type": "string",
        "metadata": { "field": "action.data",
          "meta_key": "card",
          "key": "name",
          "value": "name"
        }
      }
    ]
  }, 
  "trigger_type": "rest_hook",
  "webhook": {
    "message_type": "object",
    "rest_hook_config": {
      "create": {
        "verb": "POST",
        "method": "/1/tokens/{USER_TOKEN}/webhooks/?key={APPLICATION_KEY}",
        "params":  {
          "description": "Pluga webhook",
          "callbackURL": "{webhook_url}",
          "idModel": "{idList}"}
      },
      "delete": {
        "verb": "DELETE",
        "method": "/1/webhooks/{id}?key={APPLICATION_KEY}&token={USER_TOKEN}"
      },
      "meta_params": {
        "webhook_id": "id",
        "webhook_url": "url"
      }
    } 
}
